local Mercury = loadstring(game:HttpGet("https://raw.githubusercontent.com/deeeity/mercury-lib/master/src.lua"))()

local GUI = Mercury:Create{
    Name = "Mercury",
    Size = UDim2.fromOffset(600, 400),
    Theme = Mercury.Themes.Dark,
    Link = "https://github.com/deeeity/mercury-lib"
}

local Tab = GUI:Tab{
	Name = "Main",
	Icon = "rbxassetid://8569322835"
}

--SCRIPT

local autoEquipRoll
Tab:Toggle{
    Name = "Auto roll and equip (can't be seen)",
    StartingState = false,
    Description = nil,
    Callback = function(state) 
    autoEquipRoll = state
    task.spawn(
        function()
            while autoEquipRoll do
                task.wait(1)
                local args = {[1] = "Roll"}
                game:GetService("Players").LocalPlayer:WaitForChild("RollRemoteClient"):FireServer(unpack(args))
                task.wait(1)
                pcall(
                    function()
                    local args = {[1] = "Equip"}
                    game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("RollEvent"):FireServer(unpack(args))
                end
                )
            end
        end
    )
    end
}

