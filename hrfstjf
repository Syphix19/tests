getgenv().LoopWinGlobal = false

--GUI
local Library = loadstring(Game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()

local Window = Library:NewWindow("1 fly speed per second")

local Tab1 = Window:NewSection("Win")

local Tab2 = Window:NewSection("Infinite")

--FUNCTIONS

function loopWin()
    while getgenv().LoopWinGlobal == true do
        game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Win"):FireServer()
        wait()
    end
end
--Script

Tab1:CreateButton("Win", function()
    game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Win"):FireServer()
end)

local localAutoWin
Tab1:CreateToggle("Auto win", function(autoWinText)
    localAutoWin = autoWinText
    if localAutoWin == true then
        getgenv().LoopWinGlobal = true
        loopWin()
    elseif localAutoWin == false  then
        getgenv().LoopWinGlobal = false
    end
end)

local localMaxStorage
Tab2:CreateTextbox("Pet storage slots", function(maxStorageSlots)
    localMaxStorage = maxStorageSlots
    game:GetService("Players").LocalPlayer.MaxStorage.Value = localMaxStorage
end)

local localRebirthAmount
Tab2:CreateTextbox("Rebirths", function(rebirthAmount)
    localRebirthAmount = rebirthAmount
    game:GetService("Players").LocalPlayer.Rebirth.Value = localRebirthAmount
end)

local localTimeAmount
Tab2:CreateTextbox("Time played", function(timeAmount)
    localTimeAmount = timeAmount
    game:GetService("Players").LocalPlayer.Time.Value = localTimeAmount
end)
