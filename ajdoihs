 
local Library = loadstring(Game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()
 
local Window = Library:NewWindow("Create a Cart Ride")
 
local Tab1 = Window:NewSection("Upgrades")
 

 local speedUpgrade
Tab1:CreateDropdown("Speed/Acceleration scale", {"Speed/Acceleration scale", "1", "2", "3", "Disable"}, 1, function(speedScale)
local speedUpgrade = speedScale
if speedUpgrade == "1" then
    game:GetService("Players").LocalPlayer.PDF.SpeedUpgrade.Value = 1
elseif speedUpgrade == "2" then
    game:GetService("Players").LocalPlayer.PDF.SpeedUpgrade.Value = 2
elseif speedUpgrade == "3" then
    game:GetService("Players").LocalPlayer.PDF.SpeedUpgrade.Value = 3
elseif speedUpgrade == "Disable" then
    game:GetService("Players").LocalPlayer.PDF.SpeedUpgrade.Value = 0
end
end)
 
