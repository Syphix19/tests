getgenv().LoopWinGlobal = false

--GUI
local Library = loadstring(Game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()

local Window = Library:NewWindow("1 fly speed per second")

local Tab1 = Window:NewSection("Main")

--FUNCTIONS

function loopWin()
    while getgenv().LoopWinGlobal == true do
        game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Win"):FireServer()
        wait()
    end
end
--Script

Tab1:CreateButton("Win", function()
    game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Win"):FireServer()
end)

local localAutoWin
Tab1:CreateToggle("Auto win", function(autoWinText)
    localAutoWin = autoWinText
    if localAutoWin == true then
        getgenv().LoopWinGlobal = true
        loopWin()
    elseif localAutoWin == false  then
        getgenv().LoopWinGlobal = false
    end
end)


local localInfPetEquip
Tab1:CreateTextbox("Equip pet (no limit)", function(equipInfPet)
    localInfPetEquip = equipInfPet
    local args = {
        [1] = game:GetService("Players").LocalPlayer:WaitForChild(equipInfPet),
        [2] = "Equip"
    }
    
    game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Equip"):FireServer(unpack(args))
end)
